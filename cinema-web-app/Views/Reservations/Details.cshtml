@model cinema_web_app.Models.Reservation

@{
ViewData["Title"] = "Reservation Details";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <!-- Movie Picture and Details -->
        <div class="col-md-4">
            <div class="card mb-3">
                <img src="@Model.Screening.Movie.ImageUrl" class="card-img-top" alt="@Model.Screening.Movie.Title">
                <div class="card-body">
                    <h5 class="card-title">@Model.Screening.Movie.Title</h5>
                    <p class="card-text">@Model.Screening.Movie.Description</p>
                </div>
            </div>
        </div>
        <!-- Reservation Details -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    Reservation Details
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">
                            Booked Seats
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.NoOfBookedSeats)
                        </dd>
                        <dt class="col-sm-4">
                            Reservation Date and Time
                        </dt>
                        <dd class="col-sm-8">
                            @Model.Screening.StartTime.ToString("yyyy-MM-dd HH:mm")
                        </dd>
                        <dt class="col-sm-4">
                            Cinema Name
                        </dt>
                        <dd class="col-sm-8">
                            @Model.Screening.ScreeningRoom.Cinema.Name
                        </dd>
                        <dt class="col-sm-4">
                            Cinema Address
                        </dt>
                        <dd class="col-sm-8">
                            @Model.Screening.ScreeningRoom.Cinema.Address
                        </dd>
                        <dt class="col-sm-4">
                            Screening Room
                        </dt>
                        <dd class="col-sm-8">
                            @Model.Screening.ScreeningRoom.Name
                        </dd>
                        <dt class="col-sm-4">
                            Reservation ID
                        </dt>
                        <dd class="col-sm-8">
                            @Model.ShortReferenceId
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-muted">
                    <a id="printButton" class="btn btn-primary">Print Reservation</a>
                    <a asp-action="DownloadPdf" asp-route-id="@Model.Id" class="btn btn-secondary">Save as PDF</a>
                    <a asp-action="MyReservations" class="btn btn-secondary float-right">Back to My Reservations</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<!-- Use the latest version of jsPDF from a reliable CDN -->
<script>
    document.getElementById('printButton').addEventListener('click', function () {
        window.print();
    });
</script>
}
