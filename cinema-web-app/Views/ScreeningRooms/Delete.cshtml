@model cinema_web_app.Models.ScreeningRoom

@{
    ViewData["Title"] = "Delete Screening Room";
}

<h1>Delete ScreeningRoom:</h1>
<h2 class="text-success">@Html.DisplayFor(model => model.Name)</h2>
<br />
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ScreeningRoom</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalNoOfSeats)
        </dt>
