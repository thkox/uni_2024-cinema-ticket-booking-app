@model IEnumerable<cinema_web_app.Models.ApplicationUser>

<h1>Users</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New User</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>Email</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>
                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info">Details</a>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post" style="display:inline;">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>