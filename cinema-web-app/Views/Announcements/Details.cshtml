@model cinema_web_app.Models.Announcement

@{
ViewData["Title"] = "Announcement Details";
}

<div class="container mt-5">
    <h1 class="mb-4">Announcement Details</h1>

    <div class="card">
        <div class="card-header">
            <h4 class="card-title">@Model.Title</h4>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <h5 class="card-subtitle mb-2 text-muted">Message</h5>
                <p class="card-text">@Model.Message</p>
            </div>
            <div class="mb-3">
                <h5 class="card-subtitle mb-2 text-muted">Publication Date</h5>
                <p class="card-text">@Model.PublicationDate.ToString("MMMM d, yyyy")</p>
            </div>
            <div class="mb-3">
                <h5 class="card-subtitle mb-2 text-muted">Cinema</h5>
                <p class="card-text">@Model.Cinema?.Name</p>
            </div>
            <div class="mb-3">
                <h5 class="card-subtitle mb-2 text-muted">Author</h5>
                <p class="card-text">@Model.User?.FirstName @Model.User?.LastName</p>
            </div>
        </div>
        <div class="card-footer text-end">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
